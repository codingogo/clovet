<!DOCTYPE html>
<html>
<head>
  <title>Project2</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<style type="text/css">
.test{
  background-color: orange;
}
</style>

<body>

    <% if logged_in? %>
      <div><%= link_to 'logout', login_path, :method => :delete, :data => { :confirm => 'are you sure?' } %></div>
    <% else %>

      <li><%= link_to 'login', login_path %></li>
      <li><%= link_to 'sign up', sign_up_path %></li>

    <% end %>
    
    <%= form_tag items_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search], placeholder: "enter a keyword" %>
      <%= submit_tag "Search", :name => nil %>
    </p>
    <% end %>

<%= yield %>


</body>
</html>
